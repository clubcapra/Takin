<launch>
  <node pkg="tf" type="static_transform_publisher" name="map_broadcaster" args="0 0 0 0 0 0 odom map 50" />
  <include
    file="$(find gazebo_ros)/launch/empty_world.launch" />
  <node
    name="spawn_model"
    pkg="gazebo_ros"
    type="spawn_model"
    args="-file $(find robotcapra)/urdf/robotcapra.urdf -urdf -model robotcapra"
    output="screen" />
  <node
    name="fake_joint_calibration"
    pkg="rostopic"
    type="rostopic"
    args="pub /calibrated std_msgs/Bool true" />

  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find capra_simulation)/rviz/base.rviz" />
  <include file="$(find capra_navigation)/launch/capra_configuration.launch"/>
</launch>